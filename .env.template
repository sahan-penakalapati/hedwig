# Hedwig Configuration Template
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_key

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
HEDWIG_LOG_LEVEL=INFO
HEDWIG_DATA_DIR=~/.hedwig
HEDWIG_MAX_RETRIES=3
HEDWIG_SECURITY_TIMEOUT=10

# Tool-specific Settings
HEDWIG_ARTIFACTS_DIR=artifacts
HEDWIG_ENABLE_AUTO_OPEN=true

# Web Research & Scraping APIs
# Firecrawl API for intelligent web scraping
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Brave Search API for web search
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here
BRAVE_SEARCH_BASE_URL=https://api.search.brave.com/res/v1

# Browser Automation Settings
# Chrome/Chromium path for Selenium (auto-detected if not specified)
# CHROME_EXECUTABLE_PATH=/usr/bin/google-chrome
# CHROMEDRIVER_PATH=/usr/bin/chromedriver

# Browser automation preferences
HEDWIG_BROWSER_HEADLESS=true
HEDWIG_BROWSER_TIMEOUT=30
HEDWIG_BROWSER_USER_AGENT=Mozilla/5.0 (compatible; Hedwig-AI/1.0)

# PDF Generation Settings (ReportLab - no API key needed)
HEDWIG_PDF_PAGE_SIZE=letter
HEDWIG_PDF_FONT_FAMILY=Helvetica